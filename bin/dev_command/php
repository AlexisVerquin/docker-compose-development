#!/bin/bash

wd="`echo ${dwd}/workspace | sed -se 's/\\//\\\\\//g'`";
ed=`echo ${uwd} | sed -se "s/${wd}//"`;

c="$*";
lc=`echo "${c}" | sed -se "s/${wd}/\/data/"`;

if [ "${ed}" == "${uwd}" ]; then
    # Not found
    ed='';
else
    ed="cd /data${ed} && ";
fi

docker-compose run --rm -u app phpfpm /bin/bash -c "${ed}php ${lc}"
exit $?

