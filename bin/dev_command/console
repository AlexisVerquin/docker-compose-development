
DEV_USER=app;
DEV_SERVICE=php7;

DEV_CMD='';
if [ -n "${DEV_DATADIR}" ]; then
    DEV_CMD="cd ${DEV_DATADIR} && ";
fi

if [ -z "${DEV_COMMAND_OPTIONS}" ]; then

    if [ "$SHELL" == "/bin/bash" ]; then
        # Interactive mode
        DEV_CMD="${DEV_CMD}bash -il"
    else

        # Make sure Antigen is initialized
        if [ -n "`git submodule status | grep -E '^\-'`" ]; then
            git submodule init
            git submodule update -f
        fi

        # Interactive mode
        DEV_CMD="${DEV_CMD}zsh -il"
    fi

fi

DEV_CMD='/bin/bash -c "'"${DEV_CMD} ${DEV_COMMAND_OPTIONS}"'"';

